<div id="gameRoomSelection" data-tuktuk="modal" class="column_5">
    <header>
        <h4 class="text thin">Create New Room</h4>
    </header>
    <article>
		<form id="createRoomForm" name="form" class="margin-top">
			<fieldset class="createRmfield">
				<label>Size:<small>required</small></label>
				<span class="select">
					<select id="gameRoomSize">
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">5</option>
					</select>
				</span>
			</fieldset>
			<br>
			<fieldset class="createRmfield">
				<label>Name:<small>required</small></label>
				<input type="text" name="name" id="name">
			</fieldset>
		</form>
    </article>
    <footer>
    	<button id="createRoomStartBtn" class="button success">Create</button>
        <button data-modal="close" class="button secondary"><span class="icon remove"></span>Close</button>
    </footer>
</div>

<div id="gameRoom" data-tuktuk="modal" class="column_9">
    <header>
        <h4 class="text thin" id="gameRoomName">Create New Room</h4>
    </header>
    <article>
		<!-- <p id="gameRoomName">Room 1</p> -->
		<p id="gameRoomCount">4/5</p>
		<div class='row'>
			<div id="gameRoomPlayer1" class="gameRoomPlayer column_2">
				<img src="images/no_user.jpg" />
				<p id="playerName" class="text center">Player</p>
			</div>
			<div id="gameRoomPlayer2" class="gameRoomPlayer column_2">
				<img src="images/user.jpg" />
				<p id="playerName" class="text center">Player</p>
			</div>
			<div id="gameRoomPlayer3" class="gameRoomPlayer column_2">
				<img src="images/user.jpg" />
				<p id="playerName" class="text center">Player</p>
			</div>
			<div id="gameRoomPlayer4" class="gameRoomPlayer column_2">
				<img src="images/user.jpg" />
				<p id="playerName" class="text center">Player</p>
			</div>
			<div id="gameRoomPlayer5" class="gameRoomPlayer column_2">
				<img src="images/user.jpg" />
				<p id="playerName" class="text center">Player</p>
			</div>
		</div>
	</article>
	<footer>
		<button id="gameRoomStartBtn" data-modal="close" class="button">Start</button>
		<button id="gameRoomExitBtn" data-modal="close" class="button secondary">Leave</button>
	</footer>
</div>


<div class="row">
	<div id="GamePlaying" class="hide">

		<div id="center" class="hide">
			<div class="tidecard1 tidecard">
			</div>
