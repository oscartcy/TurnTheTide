<div id="loading">
	<img src="/images/loading.gif"></img>
</div>

<div id="main">
	<div class="row margin-bottom">
		<div class="column_4 radius bck light padding-top padding-bottom row2 left_col">
		
			<div class="pro_file_div">
				<img src="/images/user.jpg" class="pro_pic">
			</div>
			<div class="pro_name">
				<h6 class="color normal text bold" id="userName">Name</h6>
				<h6 class="color normal text bold" id="userScore">Score</h6>
			</div>
			
			<br><br><br>
			
			<div class="margin-top" style="height:408px;">
				<button id="matchButton" class="match_btn">Match</button><br><br><br>
				<!-- <button id="createRoomButton" data-tuktuk-modal="big_modal" class="cre_rm_btn">Create Room</button> -->
				<button data-tuktuk-modal="gameRoomSelection" class="cre_rm_btn" id="createRoomButton">Create Room</button>
			</div>
		</div>
		
		<div class="column_8 radius bck light padding-top padding-bottom row2 right_col">
			<div class="row" style="margin: 0px;">
				<form id="searchbox" name="form">
					<input type="text" name="default" id="search_rm_txt" placeholder="Search Room Here">
				</form>
			</div>
			<div id="gameRoomList" class="row">
			</div>
		</div>
		
	</div>

	<div class="row row3">
		<div id="ranking" class="column_12 radius bck light row3">
			<div id="rank_table" class="row padding-left padding-right">
			</div>
		</div>
	</div>
</div>

